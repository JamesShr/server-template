{
  "name": "@server-template/source",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "init": "node init.js",
    "reset": "nx reset",
    "apps:api-gateway:dev": "cross-env NODE_CONFIG_DIR=./apps/api-gateway/config nx run api-gateway:serve",
    "apps:business-service:dev": "cross-env NODE_CONFIG_DIR=./apps/business-service/config nx run business-service:serve",
    "apps:data-management:dev": "cross-env NODE_CONFIG_DIR=./apps/data-management/config nx run data-management:serve",
    "docker:dev": "docker compose -p server-template -f docker-compose.yml up",
    "docker:up": "docker compose -p server-template -f docker-compose.yml up -d --build",
    "docker:down": "docker compose -p server-template -f docker-compose.yml down",
    "docker:infra:up": "docker compose -p server-template -f docker-compose.infra.yml up -d --build",
    "docker:infra:down": "docker compose -p server-template -f docker-compose.infra.yml down",
    "prisma:deploy": "cross-env DOTENV_CONFIG_PATH=./libs/prisma/src/schema/data-management/.env npx prisma migrate deploy --schema=libs/prisma/src/schema/data-management/schema.prisma",
    "prisma:dev": "cross-env DOTENV_CONFIG_PATH=./libs/prisma/src/schema/data-management/.env npx prisma migrate dev --name data-management  --schema=libs/prisma/src/schema/data-management/schema.prisma",
    "prisma:generate": "cross-env DOTENV_CONFIG_PATH=./libs/prisma/src/schema/data-management/.env npx prisma generate --schema=libs/prisma/src/schema/data-management/schema.prisma",
    "prisma:dev:create-only": "cross-env DOTENV_CONFIG_PATH=./libs/prisma/src/schema/data-management/.env npx prisma migrate dev --create-only --name data-management --schema=libs/prisma/src/schema/data-management/schema.prisma"
  },
  "private": true,
  "dependencies": {
    "@nestjs/common": "^11.1.5",
    "@nestjs/core": "^11.1.5",
    "@nestjs/microservices": "^11.1.5",
    "@nestjs/platform-express": "^11.1.5",
    "@nx/devkit": "21.3.7",
    "@nx/plugin": "^21.3.7",
    "@prisma/client": "^6.12.0",
    "axios": "^1.11.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "config": "^4.1.0",
    "ioredis": "^5.6.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@nestjs/schematics": "^11.0.5",
    "@nestjs/testing": "^11.1.5",
    "@nx/eslint": "21.3.7",
    "@nx/eslint-plugin": "21.3.7",
    "@nx/jest": "21.3.7",
    "@nx/js": "21.3.7",
    "@nx/nest": "21.3.7",
    "@nx/node": "21.3.7",
    "@nx/web": "21.3.7",
    "@nx/webpack": "21.3.7",
    "@nx/workspace": "21.3.7",
    "@swc-node/register": "~1.10.10",
    "@swc/cli": "~0.7.8",
    "@swc/core": "~1.13.2",
    "@swc/helpers": "~0.5.17",
    "@swc/jest": "~0.2.39",
    "@types/config": "^3.3.5",
    "@types/jest": "^30.0.0",
    "@types/node": "~24.1.0",
    "cross-env": "^10.0.0",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "jest": "^30.0.5",
    "jest-environment-node": "^30.0.5",
    "nx": "21.3.7",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.0",
    "ts-node": "10.9.2",
    "tslib": "^2.8.1",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.38.0",
    "webpack-cli": "^6.0.1"
  },
  "workspaces": [
    "apps/*",
    "libs/*",
    "plugins"
  ]
}
