generator client {
  provider        = "prisma-client-js"
  output          = "../../client/boilerplate/generated"
  previewFeatures = ["views"]
  binaryTargets   = ["native", "debian-openssl-3.0.x", "linux-musl-openssl-3.0.x"] // for docker alpine linux
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
