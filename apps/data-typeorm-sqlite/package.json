{
  "name": "@server-template/data-typeorm-sqlite",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "pkg:win64": "pkg . -t node18-win-x64 -o output/data-typeorm-sqlite --debug",
    "obfuscate": "javascript-obfuscator ./dist --output ./dist-obf --compact true --control-flow-flattening true",
    "release": "npm run obfuscate && npm run pkg:win64"
  },
  "bin": "dist/main.js",
  "pkg": {
    "scripts": "dist/**/*.js",
    "assets": [
      "../../node_modules/sqlite3"
    ]
  },
  "nx": {
    "name": "data-typeorm-sqlite",
    "targets": {
      "build": {
        "executor": "nx:run-commands",
        "options": {
          "command": "webpack-cli build",
          "args": [
            "--node-env=production"
          ]
        },
        "configurations": {
          "development": {
            "args": [
              "--node-env=development"
            ]
          }
        }
      },
      "serve": {
        "continuous": true,
        "executor": "@nx/js:node",
        "defaultConfiguration": "development",
        "dependsOn": [
          "build"
        ],
        "options": {
          "buildTarget": "data-typeorm-sqlite:build",
          "runBuildTargetDependencies": false
        },
        "configurations": {
          "development": {
            "buildTarget": "data-typeorm-sqlite:build:development"
          },
          "production": {
            "buildTarget": "data-typeorm-sqlite:build:production"
          }
        }
      }
    }
  }
}
