{
  "name": "@server-template/business-service",
  "version": "0.0.1",
  "private": true,
  "nx": {
    "name": "business-service",
    "targets": {
      "build": {
        "executor": "nx:run-commands",
        "options": {
          "command": "webpack-cli build",
          "args": [
            "--node-env=production"
          ]
        },
        "configurations": {
          "development": {
            "args": [
              "--node-env=development"
            ]
          }
        }
      },
      "serve": {
        "continuous": true,
        "executor": "@nx/js:node",
        "defaultConfiguration": "development",
        "dependsOn": [
          "build"
        ],
        "options": {
          "buildTarget": "business-service:build",
          "runBuildTargetDependencies": false
        },
        "configurations": {
          "development": {
            "buildTarget": "business-service:build:development"
          },
          "production": {
            "buildTarget": "business-service:build:production"
          }
        }
      },
       "docker-build": {
        "dependsOn": [
          "build"
        ],
        "command": "docker build -f apps/business-service/Dockerfile . -t server-template-business-service"
      },
      "github-staging-docker-build": {
        "command": "docker build -f apps/business-service/Dockerfile.staging . -t $DOCKER_REGISTRY/$DOCKERHUB_USERNAME/business-service:$IMAGE_TAG_CHANNEL && docker push $DOCKER_REGISTRY/$DOCKERHUB_USERNAME/business-service:$IMAGE_TAG_CHANNEL"
      },
      "github-release-tag-docker-build":{
         "command": "docker build --build-arg BASE_VERSION=$IMAGE_TAG_CHANNEL -f apps/business-service/Dockerfile.release . -t $DOCKER_REGISTRY/$DOCKERHUB_USERNAME/business-service:$IMAGE_TAG_CHANNEL && docker push $DOCKER_REGISTRY/$DOCKERHUB_USERNAME/business-service:$IMAGE_TAG_CHANNEL"
      }
    }
  }
}
