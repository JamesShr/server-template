{
  "name": "@server-template/api-gateway",
  "version": "0.0.1",
  "private": true,
  "nx": {
    "targets": {
      "build": {
        "executor": "nx:run-commands",
        "options": {
          "command": "webpack-cli build",
          "args": [
            "--node-env=production"
          ]
        },
        "configurations": {
          "development": {
            "args": [
              "--node-env=development"
            ]
          }
        }
      },
      "serve": {
        "continuous": true,
        "executor": "@nx/js:node",
        "defaultConfiguration": "development",
        "dependsOn": [
          "build"
        ],
        "options": {
          "buildTarget": "@server-template/api-gateway:build",
          "runBuildTargetDependencies": false
        },
        "configurations": {
          "development": {
            "buildTarget": "@server-template/api-gateway:build:development"
          },
          "production": {
            "buildTarget": "@server-template/api-gateway:build:production"
          }
        }
      },
      "test": {
        "options": {
          "passWithNoTests": true
        }
      },
      "docker-build": {
        "dependsOn": [
          "build"
        ],
        "command": "docker build -f apps/api-gateway/Dockerfile . -t server-template-api-gateway"
      },
      "github-staging-docker-build": {
        "command": "docker build -f apps/api-gateway/Dockerfile . -t $DOCKER_REGISTRY/$DOCKERHUB_USERNAME/api-gateway:$IMAGE_TAG_SHA -t $DOCKER_REGISTRY/$DOCKERHUB_USERNAME/api-gateway:$IMAGE_TAG_CHANNEL && docker push $DOCKER_REGISTRY/$DOCKERHUB_USERNAME/api-gateway:$GITHUB_SHA && docker push $DOCKER_REGISTRY/$DOCKERHUB_USERNAME/api-gateway:IMAGE_TAG_CHANNEL"
      }
    }
  }
}
